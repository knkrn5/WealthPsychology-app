<body id="blog-page">

    <header> 
        <nav>
          <div class="menu-toggle" id="menu-bars">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
          </div>
             
          <div class="brand-logo-container">
            <a href="/index.html" class="home-nav">
              <img src="/global/imgs/logo.webp" alt="Brand Logo" class="brand-logo">
            </a>
          </div>
       
          <h1>Blogs</h1> 
      
          <ul class="nav-menu">
            <li><a href="/index.html" >Home</a></li>
            <li><a href="/finance-news/finance-news.html">Finance News</a></li>
            <li><a href="/blog" class="active">Blog</a></li>
            <li><a href="/financial-calculators/financial-calculators.html">Financial Calculators</a></li>
