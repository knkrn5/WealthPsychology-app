<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

   <!-- Google tag (gtag.js) for analytics-->
   <script async src="https://www.googletagmanager.com/gtag/js?id=G-L4D1L8LGWZ"></script>
   <script>
     window.dataLayer = window.dataLayer || [];
     function gtag(){dataLayer.push(arguments);}
     gtag('js', new Date());
     gtag('config', 'G-L4D1L8LGWZ');
   </script>

     <!-- Chatbase chatbot -->
     <script>
      window.embeddedChatbotConfig = {
        chatbotId: "Bc610_SZ0U30m1hncgLJo",
        domain: "www.chatbase.co"
      };
    </script>
    <script
      src="https://www.chatbase.co/embed.min.js"
      chatbotId="Bc610_SZ0U30m1hncgLJo"
      domain="www.chatbase.co"
      defer>
    </script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/navbar/nav.css">
    <link rel="stylesheet" href="/layouts/footer/footer.css">
    <link rel="icon" href="../global/icons/favicon.ico" type="image/x-icon"> 
    <link rel="stylesheet" href="/views/components/post/post.css">
    
    <!-- Dynamic Title and SEO Meta Tags -->
    <link rel="icon" href="/global/icons/favicon.ico" type="image/x-icon"/>
    <meta name="description" content="<%= metaDescription %>">
    <meta name="keywords" content="<%= metaKeywords %>">
    <meta name="author" content="WealthPsychology, karan">
    <meta name="robots" content="index, follow">

    <!--Dynamically  Open Graph Meta Tags -->
    <meta property="og:title" content="<%= title %>">
    <meta property="og:description" content="<%= metaDescription %>">
    <meta property="og:image" content="https://wealthpsychology.in/global/imgs/logo.webp">
    <meta property="og:url" content="<%= blogUrl %>">
    <meta property="og:type" content="website">

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= title %>">
    <meta name="twitter:description" content="<%= metaDescription %>">
    <meta name="twitter:image" content="https://wealthpsychology.in/global/imgs/logo.webp">
    <meta name="twitter:url" content="<%= blogUrl %>">
    <meta name="twitter:site" content="@ka_r_an5">

     <!-- Canonical Link -->
     <link rel="canonical" href="<%= blogUrl %>">

      <!-- Additional Meta Tags -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="googlebot" content="index, follow">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title><%= title %></title>
</head>

<body id="blog-post-page">

    <!-- Include Header Partial -->
    <%- include('../../partials/header') %>

    <main>
        <div id="post-container">

            <!-- Post content will be loaded here -->
            <article class="full-article">
              <h1><%= post.title.rendered.replace(/&nbsp;/g, ' ') %></h1> <!-- Replace &nbsp; with a space -->
              <p>Published on: <%= new Date(post.date).toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' }) %></p>
              <div><%- post.content.rendered.replace(/&nbsp;/g, ' ') %></div> <!-- Replace &nbsp; with a space in the content -->
              <a href="/blog/blog.html" class="back"><i class="fa-solid fa-caret-left"></i>Back</a>
            </article>
            
        </div>

    </main>

    <!-- Include Footer Partial -->
    <%- include('../../partials/footer') %>

    <script src="/views/components/post/post.js"></script>
    <script src="/navbar/nav.js"></script>

</body>
</html>
